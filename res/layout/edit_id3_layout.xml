<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Label Fields -->
    
    <TextView
        android:id="@+id/songInfoTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="SONG INFORMATION"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    
     <TextView
         android:id="@+id/infoView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/songTitleTextView"
         android:layout_alignLeft="@+id/songInfoTitleTextView"
         android:layout_marginTop="5dp"
         android:text="Changes will apply to *all* selected songs."
         android:textSize="12dp" />

    <TextView
        android:id="@+id/songTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/songInfoTitleTextView"
        android:layout_below="@+id/songInfoTitleTextView"
        android:layout_marginTop="20dp"
        android:text="Song Title"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/artistTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/songInfoTitleTextView"
        android:layout_below="@+id/songTitleTextView"
        android:layout_marginTop="15dp"
        android:text="Artist"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/albumArtistTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/songInfoTitleTextView"
        android:layout_below="@+id/artistTextView"
        android:layout_marginTop="15dp"
        android:text="Album Artist  "
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/genreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/songInfoTitleTextView"
        android:layout_below="@+id/albumArtistTextView"
        android:layout_marginTop="15dp"
        android:text="Genre"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/composerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/songInfoTitleTextView"
        android:layout_below="@+id/genreTextView"
        android:layout_marginTop="15dp"
        android:text="Composer"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/trackTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/songInfoTitleTextView"
        android:layout_below="@+id/composerTextView"
        android:layout_marginTop="15dp"
        android:text="Track"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/discTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/songInfoTitleTextView"
        android:layout_below="@+id/trackTextView"
        android:layout_marginTop="15dp"
        android:text="Disc"
        android:textSize="15dp"
        android:textStyle="bold" />
    
     <TextView
        android:id="@+id/yearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/songInfoTitleTextView"
        android:layout_below="@+id/discTextView"
        android:layout_marginTop="15dp"
        android:text="Year"
        android:textSize="15dp"
        android:textStyle="bold" />
     
     
    <!-- Input Fields -->

    <EditText
        android:id="@+id/editSongTitleField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/albumArtistTextView"
        android:layout_alignBottom="@+id/songTitleTextView"
        android:layout_marginRight="18dp"
        android:ems="10"
        android:imeOptions="actionDone" />

    <EditText
        android:id="@+id/editArtistField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editSongTitleField"
        android:layout_alignBottom="@+id/artistTextView"
        android:layout_marginRight="18dp"
        android:ems="10"
        android:imeOptions="actionDone" />

    <EditText
        android:id="@+id/editAlbumArtistField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editSongTitleField"
        android:layout_alignBottom="@+id/albumArtistTextView"
        android:layout_marginRight="18dp"
        android:ems="10"
         android:inputType="textEmailAddress"
        android:imeOptions="actionDone" />

    <EditText
        android:id="@+id/editGenreField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editSongTitleField"
        android:layout_alignBottom="@+id/genreTextView"
        android:layout_marginRight="18dp"
        android:ems="10"
        android:imeOptions="actionDone" />

    <EditText
        android:id="@+id/editComposerField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editSongTitleField"
        android:layout_alignBottom="@+id/composerTextView"
        android:layout_marginRight="18dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:imeOptions="actionDone" />

    <EditText
        android:id="@+id/trackBeginningField"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editSongTitleField"
        android:layout_alignBottom="@+id/trackTextView"
        android:ems="25"
        android:imeOptions="actionDone" />

    <EditText
        android:id="@+id/discBeginningField"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editSongTitleField"
        android:layout_alignBottom="@+id/discTextView"
        android:ems="25"
        android:imeOptions="actionDone" />

    <EditText
        android:id="@+id/yearInputField"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editSongTitleField"
        android:layout_alignBottom="@+id/yearTextView"
        android:ems="25"
        android:imeOptions="actionDone" />

    <!-- Buttons -->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yearInputField"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Confirm" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="300dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Cancel" />
    </LinearLayout>
    
</RelativeLayout>