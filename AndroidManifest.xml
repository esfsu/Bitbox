<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teambitbox.bitbox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/bitbox_logo_droid"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.teambitbox.bitbox.view.BitboxApp" >
        <activity
            android:name="com.teambitbox.bitbox.MyMusicActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EditID3Activity"></activity>
        <activity android:name=".SettingsActivity"></activity>
    </application>

</manifest>

